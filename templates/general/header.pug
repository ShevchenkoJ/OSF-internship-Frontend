mixin drop-down_items(text, link)
  li.drop-down__item
    a.drop-down__link(href=link)=text

include ../pages/pop-ups.pug

div.header
    div.page-container.container
        a.logo-group(href="./index.html")
                img.logo-pic(src="../OSF-internship-Frontend/images/OSF-logo.png")
                span.logo-text--up o s f
                span.logo-text--down academy
        div.nav-wrapper
            ul.header-nav
                li.header-nav__item
                    a.header-nav__link.drop-down__hover(href="#") services
                li.header-nav__item
                    a.header-nav__link(href="#") company
                li.header-nav__item
                    a.header-nav__link(href="#") library
                li.header-nav__item
                    a.header-nav__link(href="#") contact us
            ul.adjustments-list
                li.adjustments-list__item
                    a.adjustments-list__link.lang_hover(href="#") en
                    div.drop-down-lang
                        ul.drop-down-lang__list
