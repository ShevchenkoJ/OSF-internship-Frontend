                        i.account-nav__icon.fas.fa-search
                li.account-nav__item(id="user")
                    a.account-nav__link(href="#")
                        i.account-nav__icon.far.fa-user
                li.account-nav__item(id="wishlist")
                    a.account-nav__link(href="#")
                        i.account-nav__icon.far.fa-heart
                        span.account-nav__counter 9
                li.account-nav__item(id="minicart")
                    a.account-nav__link(href="#")
                        i.account-nav__icon.fa.fa-shopping-bag
                        span.account-nav__counter 15
